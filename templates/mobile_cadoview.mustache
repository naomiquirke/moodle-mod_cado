{{!
    @template mod_cado/mobile_cadoview

    Template for the mobile view page.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * cmid
    * courseid
    * approved
    * data

    Example context (json):
    {
      "cmid": "62",
      "courseid": "5",
      "approved": "false",
      "data": "Sorry, this CADO is not yet available."
    }
}}
{{=<% %>=}}
<div>
    <ion-list>
        <%^approved%>
            <ion-item>
                <p><% data %></p>
            </ion-item>
        <%/approved%>
        <%#approved%>
            <%#data%>
            <div>
                <%> mod_cado/mobile_cadocore %>
            </div>
            <!-- Call log WS when the template is loaded. -->
            <div core-site-plugins-call-ws-on-load name="mod_cado_view_cado"
                [params]="{cadoid: <% cadoid %>}"
                [preSets]="{getFromCache: 0, saveToCache: 0}">
            </div>
            <%/data%>
        <%/approved%>
    </ion-list>
</div>
